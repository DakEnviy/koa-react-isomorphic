{
  "presets": ["./scripts/preset-es2015", "react", "stage-0"],
  "plugins": [
    "transform-runtime",
    ["module-resolver", {
      "root": ["."],
      "alias": {
        "config": "./config",
        "client": "./app/client",
        "server": "./app/server",
      }
    }]
  ],
  "env": {
    "development": {
      "plugins": [
        ["react-transform", {
          "transforms": [{
            "transform": "react-transform-hmr",
            "imports": ["react"],
            "locals": ["module"]
          }, {
            "transform": "react-transform-catch-errors",
            "imports": ["react", "redbox-react"]
          }]
        }]
      ]
    },
    "production": {
      "plugins": [
        "transform-react-constant-elements",
        "transform-react-inline-elements",
        "transform-react-remove-prop-types"
      ]
    },
    "test": {
      "plugins": [
        "rewire"
      ]
    }
  }
}
